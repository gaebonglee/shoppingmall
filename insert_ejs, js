    <!--javascript-->
    <script>
      function showOptions(type) {
  var selectBox = document.getElementById("type");
  selectBox.innerHTML = "";

  var options = [];

  switch (type) {
    case "delivery":
      options = ["문의 유형을 선택해주세요.", "예약배송", "기타", "배송일정"];
      break;
    case "order":
      options = ["문의 유형을 선택해주세요.", "결제수단", "주문변경", "기타"];
      break;
    case "cancel":
      options = [
        "문의 유형을 선택해주세요.",
        "주문취소",
        "교환/반품",
        "환불/반품",
      ];
      break;
    case "member":
      options = [
        "문의 유형을 선택해주세요.",
        "가입/인증",
        "로그인/정보",
        "탈퇴/기타",
      ];
      break;
    case "product":
      options = ["문의 유형을 선택해주세요.", "상품문의", "불량/하자", "CS"];
      break;
    case "service":
      options = ["문의 유형을 선택해주세요.", "고객센터", "신고", "기타"];
      break;
    default:
      options = ["문의 유형을 선택해주세요."];
      break;
  }

  options.forEach(function (optionText) {
    var option = document.createElement("option");
    option.text = optionText;
    selectBox.add(option);
  });

  var buttons = document.querySelectorAll(".enquiry_type_list li button");
  buttons.forEach(function (btn) {
    btn.classList.remove("selected");
  });
  document.getElementById(type + "Btn").classList.add("selected");
}

    </script>
    <!--javascript-->
